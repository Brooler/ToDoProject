@model ToDoProject.Web.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
}

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<h2>Login</h2>

<div class="row">
    <div class="col-md-6 col-lg-offset-3">
        <form novalidate method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control"/>
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label><input type="checkbox" />Remember me</label>
                </div>
                <span asp-validation-for="RememberMe"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-md btn-success" value="Login"/>
            </div>
        </form>
        <div class="col-md-3 col-md-offset-3">
            <a asp-controller="Auth" asp-action="SignUp">Create account</a>
        </div>
        <div class="col-md-3">
            <a asp-controller="Auth" asp-action="Recover">Forgot password?</a>
        </div>
    </div>
</div>